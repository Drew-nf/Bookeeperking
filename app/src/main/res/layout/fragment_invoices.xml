<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".InvoicesFragment">

    <Button
        android:id="@+id/buttonAddInvoice"
        android:layout_width="229dp"
        android:layout_height="80dp"
        android:text="@string/buttonAddInvoice"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEditInvoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEditInvoice"
        android:layout_width="229dp"
        android:layout_height="80dp"
        android:text="@string/buttonEditInvoice"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddInvoice" />

</androidx.constraintlayout.widget.ConstraintLayout>