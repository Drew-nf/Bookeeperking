<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#00FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="horizontal"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:id="@+id/buttonHomeInvoices"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/draw_button"
        android:textColor="@color/buttonText"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonHomeEmployees"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonHomePayroll"
        app:strokeColor="#1616E6"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/textInvoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="106dp"
            android:text="Invoices"
            android:textColor="@color/buttonText"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageInvoice"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/invoice" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonHomeEmployees"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/draw_button"
        android:textColor="@color/buttonText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonHomeInvoices"
        app:layout_constraintBottom_toTopOf="@id/buttonHomeSalesTax"
        app:strokeColor="#1616E6"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/textEmployees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="106dp"
            android:text="Employees"
            android:textColor="@color/buttonText"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imageEmployee"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/employee" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonHomePayroll"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:background="@drawable/draw_button"
        android:textColor="@color/buttonText"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonHomeSalesTax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeInvoices"
        app:layout_constraintBottom_toTopOf="@id/buttonHomeCalendar"
        app:strokeColor="#1616E6"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/textPayroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="106dp"
            android:text="Payroll"
            android:textColor="@color/buttonText"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imagePayroll"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/hand" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonHomeSalesTax"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:background="@drawable/draw_button"
        android:textColor="@color/buttonText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonHomePayroll"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeEmployees"
        app:layout_constraintBottom_toTopOf="@id/buttonHomeCoInfo"
        app:strokeColor="#1616E6"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/textSalesTax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="106dp"
            android:text="Sales Tax"
            android:textColor="@color/buttonText"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageSalesTax"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/money" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonHomeCalendar"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/draw_button"
        android:textColor="@color/buttonText"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonHomeCoInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomePayroll"
        app:strokeColor="#1616E6"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/textCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="106dp"
            android:text="Calendar"
            android:textColor="@color/buttonText"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageCalendar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/calendar" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonHomeCoInfo"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/draw_button"
        android:textColor="@color/buttonText"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonHomeCalendar"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeSalesTax"
        app:strokeColor="#1616E6"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/textCoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="106dp"
            android:text="Company Info"
            android:textAlignment="center"
            android:textColor="@color/buttonText"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageCoInfo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/building" />

    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="icon of a text message"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/stat_notify_chat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/accountantButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/ic_launcher_foreground"

        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"

        />
    <TextView
        android:id="@+id/accountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Message Accountant"
        app:layout_constraintBottom_toBottomOf="@+id/accountantButton"
        app:layout_constraintEnd_toStartOf="@+id/accountantButton"
        app:layout_constraintTop_toTopOf="@+id/accountantButton" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/customerSupport"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/ic_launcher_foreground"

        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/accountantButton"
        app:layout_constraintBottom_toBottomOf="@+id/accountantButton"
        app:layout_constraintEnd_toEndOf="@+id/accountantButton"

        />
    <TextView
        android:id="@+id/customerSupportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Contact Support"
        app:layout_constraintBottom_toBottomOf="@+id/customerSupport"
        app:layout_constraintEnd_toStartOf="@+id/customerSupport"
        app:layout_constraintTop_toTopOf="@+id/customerSupport" />




</androidx.constraintlayout.widget.ConstraintLayout>